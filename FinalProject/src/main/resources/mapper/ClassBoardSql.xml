<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="data.mapper.ClassBoardMapper"> 
	<select id="getTotalCount" resultType="int">
		select count(*) from classboarder
	</select>
	<select id="getData" parameterType="String" resultType="cdto">
		select * from classboarder where num =#{num}
	</select>
	<select id="getAlllist" resultType="cdto">
		select * from classboarder order by num asc
	</select>
	<select id="getAllnewlist" resultType="cndto">
	select * from classnewboarder order by num asc
	</select>
	<select id="getPopular" resultType="cdto">
		select * from classboarder order by classheart desc
	</select>
	<select id="getCategory" parameterType="String" resultType="cdto">
		select * from classboarder where class_op_cate = #{class_op_cate} order by num desc
	</select>
	<insert id="insertBoard" parameterType="cdto">
		insert into classboarder (myid,title,class_op_cate,class_op_detail,classprice,classinfo,class_process,uploadfile,uploadfile1,uploadfile2,uploadfile3,uploadfile4,uploadfile5,writeday)
		values (#{myid},#{title},#{class_op_cate},#{class_op_detail},#{classprice},#{classinfo},#{class_process},#{uploadfile},#{uploadfile1},#{uploadfile2},#{uploadfile3},#{uploadfile4},#{uploadfile5},now())
	</insert>
	<insert id="insertNewBoard" parameterType="cndto">
		insert into classnewboarder (myid,title,class_op_cate,class_op_detail,classprice,classinfo,class_process,uploadfile,writeday)
		values (#{myid},#{title},#{class_op_cate},#{class_op_detail},#{classprice},#{classinfo},#{class_process},#{uploadfile},now())
	</insert>
	<delete id="deleteBoard" parameterType="String">
		delete from classboarder where num=#{num}
	</delete>
	<select id="getSevendays" resultType="cndto">
		select * from classnewboarder where writeday > now() - interval 7 DAY;
	</select>
	
	<!-- 좋아요 추가 -->
	<insert id="heart_save" parameterType="hdto">
		insert into heartclass (id, num) values (#{id},#{num})
	</insert>
	<update id="heart_up" parameterType="cdto">
		update classboarder set classheart=classheart-1 where num=#{num}
	</update>
	
	<!-- 좋아요 삭제 -->
	<delete id="heart_remove" parameterType="String">
		delete from heartclass where idx=#{idx} and id=#{id}
	</delete>
	<update id="heart_down" parameterType="cdto">
		update classboarder set classheart=classheart-1 where num=#{num}
	</update>
	
	<!-- 갯수 출력 -->
	<select id="heart_count" parameterType="hdto" resultType="hdto">
		select heart from heartclass where idx=#{idx}
	</select>
	
	
	
	
</mapper>