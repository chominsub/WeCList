<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.UserMapper"> 
	
	<select id="GetIdData" parameterType="String" resultType="udto">
		select * from usersjoin where id=#{id}
	</select>
	
	<select id="getTotalCount" parameterType="String" resultType="int">
		select count(*) from usersjoin where id=#{id}
	</select>
	<insert id="insertMember" parameterType="udto">
		insert into usersjoin (irum,id,pass1,hp,addr1,addr2,email,gaipday)
		values (#{irum},#{id},#{pass1},#{hp},#{addr1},#{addr2},#{email},now())
	</insert>
	<select id="getIdCheck" parameterType="String" resultType="int">
		select count(*) from usersjoin where id=#{id}
	</select>
	<select id="getCheckPass" parameterType="HashMap" resultType="int">
		select count(*)	from usersjoin where idx=#{idx} and pass1=#{pass1}
	</select>
	<select id="getMemberData" parameterType="String" resultType="udto">
		select * from usersjoin where idx=#{idx}
	</select>
	<delete id="deleteMember" parameterType="String">
		delete from usersjoin where idx=#{idx}
	</delete>
	<update id="updateMember" parameterType="udto">
		update usersjoin set irum=#{irum},hp=#{hp},addr1=#{addr1},addr2=#{addr2},email=#{email}
		where id=#{id}
	</update>
	<select id="getName" parameterType="String" resultType="String">
		select irum from usersjoin where id=#{id}
	</select>
	<select id="login" parameterType="HashMap" resultType="int">
		select count(*)	from usersjoin where id=#{id} and pass1=#{pass1}
	</select>
</mapper>